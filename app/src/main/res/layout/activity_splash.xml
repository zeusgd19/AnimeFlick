<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888">

    <ImageView
        android:id="@+id/logo_izquierda"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_izquierda"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/logo_derecha"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_derecha"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/logo_abajo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_abajo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/logoA"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_a"
        android:scaleType="fitCenter"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nimeFlick"
        android:textColor="@android:color/white"
        android:alpha="0"
        android:textSize="36sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/logoA"
        app:layout_constraintTop_toTopOf="@id/logoA"
        app:layout_constraintBottom_toBottomOf="@id/logoA" />

</androidx.constraintlayout.widget.ConstraintLayout>